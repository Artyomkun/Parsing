{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/main/*": ["src/main/*"],
      "@/preload/*": ["src/preload/*"],
      "@/renderer/*": ["src/renderer/*"]
    },
    "types": ["node", "electron"]
  },
  "include": ["src/**/*"]
}
