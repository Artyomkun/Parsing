{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "outDir": "./dist/main",
    "types": ["node", "electron", "cheerio", "puppeteer-core"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src/main",
    "composite": true,
    "lib": ["es2020"]
  },
  "include": [
    "src/main/**/*",
    "vite.main.config.js",
    "electron/main.ts"
  ],
  "exclude": [
    "src/renderer",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}